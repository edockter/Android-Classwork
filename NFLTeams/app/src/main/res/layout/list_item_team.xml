<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/list_item_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_item_logo_imageview"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:text="@string/image_placeholder"
        android:layout_alignBottom="@+id/list_item_nflteam_division_text_view"
        android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/list_item_nflteam_title_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/list_item_logo_imageview"
              android:textStyle="bold"
              android:padding="4dp"
              tools:text="Team Title" />

    <TextView android:id="@+id/list_item_nflteam_division_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              android:layout_toRightOf="@id/list_item_logo_imageview"
              android:layout_below="@id/list_item_nflteam_title_text_view"
              tools:text="Team Division" />
</RelativeLayout>